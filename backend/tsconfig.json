{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"strict": true,
		"incremental": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}

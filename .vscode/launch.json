    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run test.py",
            "type": "python",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug train.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Debug addsent",
            "type": "python",
            "request": "launch",
            "program": "addsent.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "subProcess": true,
            "args": [
                "--ci_cd",
                "--amount-exe",
                "100",
                "--test"
            ]
        }
    ]
}